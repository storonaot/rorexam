%header
  .x-container.x-header
    .x-header__inner
      %nav.x-header__nav
        = link_to t('.home'), root_path, class: ['x-header__nav-item', current_page?(root_path) ? 'is-active' : '']
        = link_to t('.about'), about_path, class: ['x-header__nav-item', current_page?(about_path) ? 'is-active' : '']
        = link_to t('.help'), help_path, class: ['x-header__nav-item', current_page?(help_path) ? 'is-active' : '']
        = link_to t('.contacts'), contacts_path, class: ['x-header__nav-item', current_page?(contacts_path) ? 'is-active' : '']
      %nav.x-header__nav.x-header__nav--right
        .x-header__lang
          - if locale == :ru
            %span.x-header__lang-item ru
            = link_to 'en', { locale: :en }, { class: 'x-header__lang-item is-disabled' }
          - else
            = link_to 'ru', { locale: :ru }, { class: 'x-header__lang-item is-disabled' }
            %span.x-header__lang-item en
        - if signed_in?
          .x-header__user
            .x-header__avatar
              = gravatar_for current_user
            .x-header__mail.js-toggle #{current_user.email}
            .x-header__dropdown
              = link_to t('.profile'), current_user, class: 'x-header__dropdown-item'
              = link_to t('.sign_out'), signout_path, method: "delete", class: 'x-header__dropdown-item'
        - else
          = link_to t('.sign_in'), signin_path, class: 'x-header__nav-item'
    .x-header__center
      .x-header__core
        .x-header__label exp
