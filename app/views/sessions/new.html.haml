- content_for(:title, "Sign in")

%h1.like-h1= t('.sign_in')

= form_for(:session, url: sessions_path) do |f|
  .x-form__fields
    .x-form__item
      = f.label  t('.email'), class: 'x-form__label'
      = f.text_field :email, class: 'x-form__field'
    .x-form__item
      = f.label t('.password'), class: 'x-form__label'
      = f.password_field :password, class: 'x-form__field'
    .x-form__actions
      = f.submit t('.sign_in'), class: 'x-button'
    .x-form__footnote
      %span= t('.new_user?')
      =link_to t('.sign_up'), signup_path, class: 'x-link'
